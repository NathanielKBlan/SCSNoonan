
public class Main {

	public static void main(String[] args) {
		final int power = 5;
		System.out.println("\t            Power");
		for(int i = 0; i <= power; i++) {
			System.out.print("     " + i + "     ");
		}
		System.out.print("\n");
		for(int i = 0; i <= power; i++) {
			System.out.print("    " + "---" + "    ");
		}
		System.out.print("\n");
		for(int i = 0; i <= 5; i++) {
			if(i == 0) {
				System.out.print("N " + i + "  ");
			}
			if(i % 6 == 1) {
				System.out.print("u " + i + "  ");
			}
			if(i % 6 == 2) {
				System.out.print("m " + i + "  ");
			}
			printPowers(i, power + 1);
			System.out.print("\n");
		}
	}
	
	static void printPowers(int x, int y) {
		for(int i = 0; i < y; i++) {
			if(i == 0 && x != 0) {
				System.out.print(1 + "\t");
			}
			if(i == 0 && x == 0) {
				System.out.print("idt" + "\t");
			}
		}
	}
	
}
